<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="be.kuleuven.softdev.haientang.newsclient">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".LoginActivity" />
        <activity android:name=".RegisterActivity" />
        <activity android:name=".BrowserActivity" />
        <activity android:name=".NewsOverviewActivity" />
        <activity android:name=".SportsActivity" />
        <activity android:name=".GuestActivity" />
        <activity android:name=".NewsShowActivity" />
        <activity android:name=".EconomyActivity" />
        <activity android:name=".ChinaActivity" />
        <activity android:name=".AddCommentActivity"></activity>
    </application>

</manifest>